<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cubes4.CUBES4.controllers.FamilyFXController"
      alignment="CENTER" spacing="10" prefWidth="800" prefHeight="600">

    <Label text="Gestion des Familles" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Formulaire pour ajouter ou modifier une famille -->
    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Nom de la famille" />
        <Button fx:id="addButton" text="Ajouter / Modifier" />
    </HBox>

    <!-- Tableau des familles -->
    <TableView fx:id="familyTable" prefHeight="400" prefWidth="750">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nom" prefWidth="500" />
            <TableColumn fx:id="editColumn" text="Modifier" prefWidth="100" />
            <TableColumn fx:id="deleteColumn" text="Supprimer" prefWidth="100" />
        </columns>
    </TableView>

    <!-- Boutons supplémentaires -->
    <HBox spacing="10">
        <Button fx:id="refreshButton" text="Rafraîchir" />
        <Button fx:id="backButton" text="Retour au Dashboard" />
    </HBox>
</VBox>
