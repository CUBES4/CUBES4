<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cubes4.CUBES4.controllers.FamilyFXController"
      alignment="TOP_CENTER" spacing="10">

    <!-- Formulaire pour ajouter ou modifier une famille -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="nameField" promptText="Nom de la famille" />
        <Button fx:id="addButton" text="Ajouter / Modifier" />
        <Button fx:id="refreshButton" text="RafraÃ®chir" />
    </HBox>

    <!-- Tableau des familles -->
    <TableView fx:id="familyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nom"/>
            <TableColumn fx:id="editColumn" text="Modifier"/>
            <TableColumn fx:id="deleteColumn" text="Supprimer"/>
        </columns>
    </TableView>
</VBox>
