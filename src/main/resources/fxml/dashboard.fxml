<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cubes4.CUBES4.controllers.DashboardFXController"

      spacing="20" alignment="CENTER" prefWidth="800" prefHeight="600">

    <Label text="Tableau de Bord" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- GridPane pour organiser les boutons -->
    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <!-- Gérer les Articles -->
        <VBox spacing="10" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="dashboard-card">
            <ImageView fx:id="articlesIcon" fitWidth="50" fitHeight="50" preserveRatio="true" />
            <Button fx:id="manageArticlesButton" text="Gérer les Articles" styleClass="dashboard-button" />
        </VBox>

        <!-- Gérer les Clients -->
        <VBox spacing="10" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="dashboard-card">
            <ImageView fx:id="customersIcon" fitWidth="50" fitHeight="50" preserveRatio="true" />
            <Button fx:id="manageCustomersButton" text="Gérer les Clients" styleClass="dashboard-button" />
        </VBox>

        <!-- Gérer les Commandes -->
        <VBox spacing="10" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="dashboard-card">
            <ImageView fx:id="ordersIcon" fitWidth="50" fitHeight="50" preserveRatio="true" />
            <Button fx:id="manageOrdersButton" text="Gérer les Commandes" styleClass="dashboard-button" />
        </VBox>

        <!-- Gérer les Fournisseurs -->
        <VBox spacing="10" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="dashboard-card">
            <ImageView fx:id="suppliersIcon" fitWidth="50" fitHeight="50" preserveRatio="true" />
            <Button fx:id="manageSuppliersButton" text="Gérer les Fournisseurs" styleClass="dashboard-button" />
        </VBox>

        <!-- Paramètres -->
        <VBox spacing="10" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="dashboard-card">
            <ImageView fx:id="settingsIcon" fitWidth="50" fitHeight="50" preserveRatio="true" />
            <Button fx:id="settingsButton" text="Paramètres" styleClass="dashboard-button" />
        </VBox>
    </GridPane>
</VBox>
