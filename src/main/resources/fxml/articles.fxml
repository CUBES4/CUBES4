<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.cubes4.CUBES4.controllers.ArticleFXController"
      spacing="10">

    <Label text="Manage Articles" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Article List View -->
    <ListView fx:id="articleList" prefHeight="400" />

    <!-- Refresh Button -->
    <Button fx:id="refreshButton" text="Refresh Articles" />

    <!-- Separator -->
    <Text text="Add New Article:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

    <!-- Input Fields for New Article -->
    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="unitPriceField" promptText="Unit Price" />
        <TextField fx:id="stockField" promptText="Stock" />
        <Button fx:id="addButton" text="Add Article" />
    </HBox>

    <!-- Navigation Back to Dashboard -->
    <Button fx:id="backButton" text="Back to Dashboard"/>

</VBox>