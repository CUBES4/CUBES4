<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cubes4.CUBES4.controllers.CustomerFXController"
      spacing="10" alignment="CENTER" prefWidth="800" prefHeight="600">

    <!-- Recherche -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Rechercher par nom/prénom"/>
        <Button fx:id="searchButton" text="Rechercher"/>
    </HBox>

    <!-- Tableau des clients -->
    <TableView fx:id="customerTable" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="firstNameColumn" text="Prénom" prefWidth="100"/>
            <TableColumn fx:id="lastNameColumn" text="Nom" prefWidth="100"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="addressColumn" text="Adresse" prefWidth="150"/>
            <TableColumn fx:id="phoneNumberColumn" text="Téléphone" prefWidth="150"/>
            <TableColumn fx:id="editColumn" text="Modifier" prefWidth="100"/>
            <TableColumn fx:id="deleteColumn" text="Supprimer" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Formulaire d'ajout -->
    <HBox spacing="10">
        <TextField fx:id="firstNameField" promptText="Prénom"/>
        <TextField fx:id="lastNameField" promptText="Nom"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="addressField" promptText="Adresse"/>
        <TextField fx:id="phoneNumberField" promptText="Téléphone"/>
        <Button fx:id="addButton" text="Ajouter"/>
    </HBox>

    <!-- Boutons d'action -->
    <HBox spacing="10">
        <Button fx:id="refreshButton" text="Rafraîchir"/>
        <Button fx:id="backButton" text="Retour au Dashboard"/>
    </HBox>
</VBox>
